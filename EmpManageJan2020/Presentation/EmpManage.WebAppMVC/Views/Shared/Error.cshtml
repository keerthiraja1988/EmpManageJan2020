@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row mb-15">
    <div class="col-md-12">
        <div class="text-center">
            <h1 class="display-1 pt-3" style=" color: #e21212; font-size:larger;font-size: 165px;">

                <i class="fas fa-exclamation-circle"></i>
            </h1>
            <h1 class="display-3">
                Oops!
            </h1>
            <div class="pt-5 mt-1" style="font-size: 20px;">
                An error occurred while processing your request.
            </div>
            @if (Model.RequestId != string.Empty && Model.RequestId != null)
            {
                <div class=" pt-5" style="font-size: 16px !important;">
                    Request Time : <strong> @Model.RequestTime </strong>
                </div>
            }

            @if (Model.RequestTime != null)
            {
                <div class=" pt-3" style="font-size: 16px !important;">
                    Request ID : <strong> @Model.RequestId </strong>
                </div>
            }

            <div class="pt-5 mt-3">
                <a href='@Url.Action("Index", "Home")' class="btn btn-info btn-lg mr-6" onclick="sharedController.showLoadingIndicator()">
                    <i class="fas fa-home"></i>
                    Take Me Home
                </a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        sharedController.hideLoadingIndicator();
    });
</script>