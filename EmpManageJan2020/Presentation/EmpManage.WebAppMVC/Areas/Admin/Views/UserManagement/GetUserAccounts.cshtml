@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header lead blockquote">
        <strong>Application Users</strong>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="lead blockquote ">
                    <tr class="">
                        <th>User Id</th>
                        <th>User Name</th>
                        <th>Email Id</th>
                        <th>Title</th>
                        <th>FullName</th>
                        <th>Gender</th>
                        <th>Active</th>
                        <th>Locked</th>
                    </tr>
                </thead>
                <tbody class="blockquote ">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#example').dataTable({
            "bLengthChange": false,             
            "ajax": {
                    "url": '@Url.Action("GetAllUserAccounts", "UserManagement", new { Area="Admin" })',
                    "type": "GET",
                    "datatype": "json"
            },
            "ajax.dataSrc": "",
             "initComplete":function( settings, json){
                   sharedController.hideLoadingIndicator();
            },
            "columns": [

                 {
                        "render": function (data, type, full, meta)
                        { return '<u><a class="" href="@Url.Action("GetUserAccountDetails", "UserManagement", new { Area="Admin"})?userId=' + full.UserId + '"> ' + full.UserId +'</a></u>'; }
                },

                    //{ "data": "UserId", "autoWidth": true },
                    { "data": "UserName", "autoWidth": true },
                    { "data": "EmailId", "autoWidth": true },
                    { "data": "UserTitleDesc", "autoWidth": true },
                    { "data": "FullName", "autoWidth": true },
                    { "data": "UserGenderDesc", "autoWidth": true },
                    { "data": "IsActive", "autoWidth": true },
                    { "data": "IsLocked", "autoWidth": true }
            ]

        });


    });

     $(window).on("load", function () {
        sharedController.navActiveColorChange("nav-item-Admin");
    });
</script>