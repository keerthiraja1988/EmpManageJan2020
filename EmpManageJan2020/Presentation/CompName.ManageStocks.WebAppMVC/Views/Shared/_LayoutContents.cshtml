<input type="hidden" id="refresh" value="no">

<div class="modal" id="modalMessageShowPopUp" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title blockquote">
                    <strong id="modalMessageShowPopUpHeaderTitle"></strong>
                </h6>
            </div>
            <div class="modal-body" id="modalMessageShowPopUpMessage">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseMessageShowPopUpMessage">
                    <i class="fas fa-times"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Ajax Error Message PopUp -->
<div class="modal fade" id="ajaxErrorMessagePopUp" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body" id="ajaxErrorMessagePopUpMessage">

                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center">
                            <h1 class="display-1" style=" color: #e21212; font-size:larger;font-size: 150px;">

                                <i class="fas fa-exclamation-circle"></i>
                            </h1>
                            <h1 class="display-4">
                                Oops!
                            </h1>
                            <div class="pt-5 " style="font-size: 20px;">
                                An error occurred while processing your request.
                            </div>
                            <div id="RequestTime" class="pt-5 font-weight-bold" style="font-size: 14px !important;">
                            </div>

                            <div id="RequestId" class="pt-3 font-weight-bold" style="font-size: 14px !important;">
                            </div>

                            <div class="error-actions pt-5 pb-2">
                                <a href='@Url.Action("Index", "Dashboard", new {area = "Home"})' class="btn btn-info mr-4" onclick="sharedController.showLoadingIndicator()">
                                    <i class="fas fa-home"></i>
                                    Take Me Home
                                </a>

                                <button type="button" class="btn btn-dark black-background"
                                        data-dismiss="modal">
                                    <i class="fas fa-times"></i>
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ajax Access Denied Message PopUp -->
<div class="modal fade" id="ajaxAccessDeniedMessagePopUp" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body" id="ajaxAccessDeniedMessagePopUpMessage">

                <div class="row">
                    <div class="col-md-12">
                        <div class="text-center">
                            <h1 class="display-1" style=" color: #e21212; font-size:larger;font-size: 150px;">

                                <i class="fas fa-exclamation-circle"></i>
                            </h1>
                            <h1 class="display-4 pt-3" style="font-size: 45px;">
                                Access Denied!
                            </h1>
                            <div class="pt-5 " style="font-size: 18px;">
                                Access to the requested page has been denied due to in-sufficient access.
                            </div>
                            <div id="" class="pt-2" style="font-size: 18px;">
                                or
                            </div>

                            <div id="" class="pt-2 pb-5 " style="font-size: 18px;">
                                Session has been expired
                            </div>

                            <div class="">
                                <a href='/' class="btn btn-primary mr-6" onclick="sharedController.showLoadingIndicator()">
                                    <i class="fas fa-home"></i>
                                    Take Me Home
                                </a>
                                <button type="button" id=""
                                        class="btn btn-secondary ml-3" data-dismiss="modal">
                                    <i class="fas fa-times"></i>  Close
                                </button>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="myNav" class="overlay d-flex justify-content-center align-items-center flex-column" style="height:100%">
    <div class="row bd-highlight">
        <div class="lds-roller"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
    </div>
    <div class="row bd-highlight">
        <span style="color:white; font-size:25px; padding-top: 10px;">Processing, Please Wait...</span>
    </div>


    <!-- The overlay -->

    <style>

        .overlay {
            height: 0%;
            width: 100%;
            position: fixed;
            z-index: 99999;
            top: 0;
            left: 0;
            background-color: rgb(0,0,0);
            background-color: rgba(0, 0, 0, 0.67);
            overflow-y: hidden;
            transition: 0.5s;
        }

        .overlay-content {
            position: relative;
            top: 25%;
            width: 100%;
            text-align: center;
            margin-top: 30px;
        }

        .overlay a {
            padding: 8px;
            text-decoration: none;
            font-size: 36px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

            .overlay a:hover, .overlay a:focus {
                color: #f1f1f1;
            }

        .overlay .closebtn {
            position: absolute;
            top: 20px;
            right: 45px;
            font-size: 60px;
        }
    </style>
</div>
