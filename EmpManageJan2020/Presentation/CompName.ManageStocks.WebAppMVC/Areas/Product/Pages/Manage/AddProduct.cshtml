@page "/Products/Manage/AddProduct"
@model CompName.ManageStocks.WebAppMVC.Areas.Product.Pages.Manage.AddProductModel
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Product</h1>

<form method="post" data-ajax="true"
      data-ajax-begin="productController.addProductOnBegin"
       data-ajax-complete="productController.addProductOnComplete"
                  data-ajax-success="productController.addProductOnSuccess"
                  data-ajax-failure="productController.addProductOnfailure">

    <div class="form-group">
        <label asp-for="AddProductVM.ProductName" class="control-label"></label>
        <input asp-for="AddProductVM.ProductName" class="form-control" />
        <span asp-validation-for="AddProductVM.ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddProductVM.ProductDescription" class="control-label"></label>
        <input asp-for="AddProductVM.ProductDescription" class="form-control" />
        <span asp-validation-for="AddProductVM.ProductDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddProductVM.ProductPrice" class="control-label"></label>
        <input asp-for="AddProductVM.ProductPrice" class="form-control" />
        <span asp-validation-for="AddProductVM.ProductPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" id="">
        <i class="fas fa-save"></i> Save
    </button>
</form>

@section scripts{

    <script src="~/jsControllers/product/productController.js"></script>
    <script>
        $(window).on("load", function () {
            sharedController.navActiveColorChange("nav-item-Products");
            sharedController.hideLoadingIndicator();

        });
    </script>
}