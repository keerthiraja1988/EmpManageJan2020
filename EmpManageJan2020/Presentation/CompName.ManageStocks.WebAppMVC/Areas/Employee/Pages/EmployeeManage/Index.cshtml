@page "/Employee/EmployeeManage/"
@model CompName.ManageStocks.WebAppMVC.Areas.Employee.Pages.EmployeeManage.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center" style="margin-right: -4px;">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-header lead blockquote text-left">
                <strong>Employees</strong>
            </div>
            <div class="card-body pl-0 pr-0 pt-0 pb-0">
                <div class="table-responsive">
                    <table id="tblEmployeesList" class="table table-striped table-bordered table-hover" style="width:100%">
                        <thead class="lead blockquote ">
                            <tr class="">
                                <th>User Id</th>
                                <th>User Name</th>
                                <th>Email Id</th>
                                <th>Title</th>
                                <th>FullName</th>
                                <th>Gender</th>
                                <th>Active</th>
                                <th>Locked</th>
                            </tr>
                        </thead>
                        <tbody class="blockquote ">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(window).on("load", function () {
            sharedController.navActiveColorChange("nav-item-Employees");
            sharedController.hideLoadingIndicator();

        });
    </script>
}